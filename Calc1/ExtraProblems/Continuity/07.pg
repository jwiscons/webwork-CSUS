$fig=image("Calc1-MK-04-07.png", width=>400, height=>300, tex_size=>500);
#
#  Create a matching list and use popups
#
$ml = new_match_list();
$ml->rf_print_q(~~&pop_up_list_print_q);
$ml->ra_pop_up_list([
"No answer" => "?",
"A" => "A", "B" => "B",
]);

#
#  Add correct questions and answers
#
$ml->qa(
"Is \(h(x)\) continuous at \(x=-1\)?", "Yes",
"Is \(h(x)\) continuous at \(x=1\)?", "No",
);
$ml->choose(2);

#
#  Add extra incorrect answers
#
#$ml->extra(
